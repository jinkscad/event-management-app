<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/event_box_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->

            <!-- Event Box -->

            <TextView
                android:id="@+id/header_title"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/michroma"
                android:text="         Event Detail"
                android:textColor="@color/purpleText"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_notification_item"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/img_event"
                    android:layout_width="0dp"
                    android:layout_height="168dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Event Details -->

                <!-- Entrant Info Section -->

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="71dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_date_box"
                    android:gravity="center"
                    android:text="OCT\n30"
                    android:textColor="@color/darkPurple"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_event" />

                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/tv_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_event_name">

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=" - "
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/eventPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Event Period:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time" />

                <LinearLayout
                    android:id="@+id/period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventPeriod">

                    <TextView
                        android:id="@+id/tv_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dash1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=" - "
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_event_details"
                    android:layout_width="297dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Loading..."
                    android:textColor="@color/dateBox"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />


                <TextView
                    android:id="@+id/tv_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Halloween Party"
                    android:textColor="@color/purpleText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_date"
                    app:layout_constraintTop_toBottomOf="@+id/img_event" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="257dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    android:text="Registration Period:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/period" />

                <LinearLayout
                    android:id="@+id/reg_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView">

                    <TextView
                        android:id="@+id/tv_registration_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Oct 2nd"
                        android:textColor="@color/dateBox"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_dash2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=" - "
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_registration_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 15th"
                        android:textColor="@color/dateBox"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="257dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    android:text="Description:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_entrants_count" />



                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="257dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    android:text="Entrants (Current / Limit):"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reg_period" />

                <TextView
                    android:id="@+id/tv_entrants_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="0"
                    android:textColor="@color/dateBox"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/event_tag_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Event Tag:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_event_details" />

                <TextView
                    android:id="@+id/et_event_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="bruh"
                    android:textColor="@color/dateBox"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_tag_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/action_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <Button
                    android:id="@+id/btn_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View QR Code"
                    android:backgroundTint="@color/purpleText"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_waiting_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Waiting List"
                    android:backgroundTint="@color/purpleText"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/purpleText"
                    android:text="View Map"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_chosen_entrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/purpleText"
                    android:text="View Chosen Entrants"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_cancelled_entrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/purpleText"
                    android:text="View Cancelled Entrants"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_finalist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/purpleText"
                    android:text="View Final List"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_export_csv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purpleText"
                    android:textColor="@color/black"
                    android:text="Export Final List (CSV)" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottom_buttons_layout"
        android:layout_width="375dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



